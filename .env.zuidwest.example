# Babbel API Production Configuration for zuidwest.cloud
# Configuration for cross-subdomain authentication between:
# - Frontend: https://babbel.zuidwest.cloud
# - Backend API: https://babbel-api.zuidwest.cloud

# MySQL Configuration
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_PASSWORD=change_this_password

# Session Configuration
SESSION_SECRET=change_this_to_32_char_random_string_please

# Authentication Method
AUTH_METHOD=both

# OAuth/OIDC Configuration (if using SSO)
OIDC_PROVIDER_URL=https://login.microsoftonline.com/YOUR-TENANT-ID/v2.0
OIDC_CLIENT_ID=your-client-id-from-azure-ad
OIDC_CLIENT_SECRET=your-client-secret-from-azure-ad
OIDC_REDIRECT_URL=https://babbel-api.zuidwest.cloud/api/v1/session/oauth/callback

# Frontend Configuration
BABBEL_FRONTEND_URL=https://babbel.zuidwest.cloud

# API Port
API_PORT=8080

# Timezone
TZ=Europe/Amsterdam

# CORS Configuration
# Allow frontend to access the API
BABBEL_ALLOWED_ORIGINS=https://babbel.zuidwest.cloud

# Cookie Configuration for cross-subdomain authentication
# CRITICAL: These settings enable cookie sharing between subdomains
# The leading dot (.) is ESSENTIAL for cross-subdomain cookies
BABBEL_COOKIE_DOMAIN=.zuidwest.cloud

# Cookie SameSite attribute
# Must be "none" for cross-subdomain requests with separate frontend/backend
# This requires HTTPS (which you have)
BABBEL_COOKIE_SAMESITE=none

# Environment (ensures cookies are secure)
BABBEL_ENV=production